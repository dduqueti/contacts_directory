.row.contact-profile
  .col.s12.m12
    .card.white
      .card-content.black-text
        .card-title.text-center
          = "#{@person.full_name} - #{@person.age}"
        .divider
        %label
          JOB
        %p
          = @person.job.upcase
        %label
          GENDER
        %p
          = @person.gender
        %label
          DATE OF BIRTH
        %p
          = @person.birthdate
        %label
          PICTURE LINK
        %p
          = @person.picture
        %label
          BIO
        %p
          = @person.bio
      .card-action.col-md-6.offset-md-6
        = link_to edit_person_path(@person), :class => 'btn-floating tooltipped', 'data-tooltip' => "Edit" do
          %i.material-icons
            mode_edit
        = link_to person_path(@person), :method => :delete, :class => 'btn-floating tooltipped', 'data-confirm' => "Are you sure you want to delete this contact?", 'data-tooltip' => "Delete" do
          %i.material-icons
            delete
        = link_to people_path, :class => 'btn-floating tooltipped', 'data-tooltip' => "Back to Directory" do
          %i.material-icons
            perm_contact_calendar