= form_for @person do |f|
  - if @person.errors.any?
    #error_explanation
      %h2= "#{pluralize(@person.errors.count, "error")} prohibited this person from being saved:"
      %ul
        - @person.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :job
    = f.text_field :job
  .field
    = f.label :bio
    = f.text_area :bio
  .field
    = f.label :gender
    = f.text_field :gender
  .field
    = f.label :birthdate
    = f.date_select :birthdate
  .field
    = f.label :picture
    = f.text_field :picture
  .actions
    = f.submit 'Save'
