
.row
  .col.s12.m6.l6
    %h3 Contacts
  .col.s12.m6.l6#new-option
    %a.waves-effect.waves-light.btn{ :href => new_person_path, :class => 'collection-item waves-effect'}
      Add new
      %i.material-icons.right
        face
%table
  %thead
    %tr
      %th First name & Last Name
      %th Email
      %th Age
      %th Action

  %tbody
    - @people.each do |person|
      %tr
        %td
          = link_to person.full_name, person_path(person)
        %td= person.email
        %td= person.age
        %td
          = link_to person_path(person), :method => :delete, :class => 'btn-floating tooltipped', 'data-confirm' => "Are you sure you want to delete this contact?", 'data-tooltip' => "Delete" do
            %i.material-icons
              delete
%br

